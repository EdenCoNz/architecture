# =============================================================================
# Environment-Based Configuration
# =============================================================================
# This file contains all available configuration variables.
# Copy this file to .env and fill in the values for your environment.
# See docs/CONFIGURATION.md for detailed documentation.
#
# IMPORTANT:
# - Never commit .env files to version control
# - Generate secure SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(50))"
# - Use different secrets for different environments
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------

# SECRET_KEY (REQUIRED in dev/prod)
# Django secret key for cryptographic signing
# MUST be at least 50 characters in production
# MUST NOT contain "django-insecure" in production
SECRET_KEY=your-secret-key-here-generate-using-python-secrets

# DJANGO_SETTINGS_MODULE (optional - defaults to development)
# Determines which environment settings to use
# Options: config.settings.development, config.settings.production, config.settings.testing
DJANGO_SETTINGS_MODULE=config.settings.development

# DEBUG (optional - defaults based on environment)
# Enable debug mode (automatically False in production)
DEBUG=True

# ALLOWED_HOSTS (REQUIRED in production)
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# DB_NAME (REQUIRED in dev/prod)
# Database name
DB_NAME=backend_db

# DB_USER (REQUIRED in dev/prod)
# Database username
DB_USER=postgres

# DB_PASSWORD (REQUIRED in dev/prod)
# Database password - NEVER commit real passwords
DB_PASSWORD=postgres

# DB_HOST (optional - defaults to localhost)
# Database host
DB_HOST=localhost

# DB_PORT (optional - defaults to 5432)
# Database port - must be valid port number (1-65535)
DB_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------

# REDIS_URL (optional - defaults to redis://127.0.0.1:6379/1)
# Redis connection URL for caching
REDIS_URL=redis://127.0.0.1:6379/1

# -----------------------------------------------------------------------------
# Celery Configuration
# -----------------------------------------------------------------------------

# CELERY_BROKER_URL (optional - defaults to redis://127.0.0.1:6379/0)
# Celery broker URL for task queue
CELERY_BROKER_URL=redis://127.0.0.1:6379/0

# CELERY_RESULT_BACKEND (optional - defaults to redis://127.0.0.1:6379/0)
# Celery result backend for task results
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------

# CORS_ALLOWED_ORIGINS (optional - defaults to localhost:3000)
# Comma-separated list of allowed CORS origins (Story #9 - Security)
# In production, set this to your frontend domains only
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF_TRUSTED_ORIGINS (optional - Story #9 - Security)
# Comma-separated list of trusted origins for CSRF protection
# In production, include https:// versions of your domains
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------

# EMAIL_HOST (optional - defaults to smtp.gmail.com)
# Email server host
EMAIL_HOST=smtp.gmail.com

# EMAIL_PORT (optional - defaults to 587)
# Email server port - must be valid port number (1-65535)
EMAIL_PORT=587

# EMAIL_HOST_USER (optional)
# Email server username
EMAIL_HOST_USER=your-email@example.com

# EMAIL_HOST_PASSWORD (optional)
# Email server password - NEVER commit real passwords
EMAIL_HOST_PASSWORD=your-email-password

# DEFAULT_FROM_EMAIL (optional - defaults to noreply@example.com)
# Default from email address
DEFAULT_FROM_EMAIL=noreply@example.com

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------

# JWT_ACCESS_TOKEN_LIFETIME_MINUTES (optional - defaults to 15)
# JWT access token lifetime in minutes - must be positive integer
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=15

# JWT_REFRESH_TOKEN_LIFETIME_DAYS (optional - defaults to 7)
# JWT refresh token lifetime in days - must be positive integer
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# -----------------------------------------------------------------------------
# Security Settings (Production)
# -----------------------------------------------------------------------------

# SECURE_SSL_REDIRECT (optional - defaults to False)
# Redirect all HTTP requests to HTTPS
SECURE_SSL_REDIRECT=False

# SESSION_COOKIE_SECURE (optional - defaults to False)
# Use secure cookies (HTTPS only)
SESSION_COOKIE_SECURE=False

# CSRF_COOKIE_SECURE (optional - defaults to False)
# Use secure CSRF cookies (HTTPS only) - Story #9
CSRF_COOKIE_SECURE=False

# RATELIMIT_ENABLE (optional - defaults to True, Story #9 - Security)
# Enable/disable rate limiting (should always be True in production)
RATELIMIT_ENABLE=True

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

# LOG_LEVEL (optional - defaults to INFO)
# Logging level - must be one of: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# SLOW_REQUEST_THRESHOLD_MS (optional - defaults to 1000)
# Threshold in milliseconds for logging slow requests
SLOW_REQUEST_THRESHOLD_MS=1000
