# Test Environment Configuration
# This file contains environment variables specific to testing

# Environment
ENVIRONMENT=testing
DEBUG=true

# Database - SQLite in-memory (default)
# Use this for fast, isolated tests
DATABASE_URL=sqlite+aiosqlite:///:memory:

# Alternative: PostgreSQL test database
# Uncomment to use PostgreSQL for integration testing
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/app_test

# Database connection pool (disabled for SQLite)
DATABASE_POOL_SIZE=0
DATABASE_MAX_OVERFLOW=0
DATABASE_POOL_TIMEOUT=5
DATABASE_POOL_RECYCLE=-1
DATABASE_ECHO=false

# JWT Configuration (simplified for tests)
JWT_SECRET_KEY=test-secret-key-not-for-production-use-only
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=1

# CORS (allow all for testing)
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true

# Redis (optional for tests - can use fakeredis)
# REDIS_URL=redis://localhost:6379/1

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=FastAPI Backend - Testing
VERSION=0.1.0-test

# Rate Limiting (disabled for tests)
RATE_LIMIT_ENABLED=false

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=simple

# Email (disabled for tests)
EMAIL_ENABLED=false

# File Uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_EXTENSIONS=[".jpg", ".jpeg", ".png", ".pdf"]

# Security (relaxed for testing)
ALLOWED_HOSTS=["*"]
TRUSTED_HOSTS=["*"]
