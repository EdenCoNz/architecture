# Application Settings
APP_NAME="FastAPI Application"
APP_VERSION="0.1.0"
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
# PostgreSQL connection URL for SQLAlchemy async engine
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/app_db

# Connection Pool Settings
# POOL_SIZE: Number of persistent connections to maintain
# Production recommendation: 20-50 based on concurrent request load
# Development: 5-10 is sufficient
DATABASE_POOL_SIZE=20

# MAX_OVERFLOW: Additional connections beyond pool_size when needed
# Set to 0 for strict pool size limit, or 10-20 for burst handling
# Total max connections = POOL_SIZE + MAX_OVERFLOW
DATABASE_MAX_OVERFLOW=0

# Connection Timeouts (configured in database.py)
# - pool_timeout: 30s (production), 10s (development)
# - command_timeout: 60s
# - connection_timeout: 10s
# - pool_recycle: 3600s (1 hour)
# - pool_pre_ping: true (verify connections before use)

# Environment-Specific Examples:
# Development:
#   DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/app_dev
#   DATABASE_POOL_SIZE=5
#   DATABASE_MAX_OVERFLOW=10
#
# Testing:
#   DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/app_test
#   DATABASE_POOL_SIZE=5
#   DATABASE_MAX_OVERFLOW=5
#
# Production:
#   DATABASE_URL=postgresql+asyncpg://dbuser:secure_password@db.example.com:5432/app_production
#   DATABASE_POOL_SIZE=50
#   DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300  # 5 minutes default cache TTL

# Security
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# API Configuration
API_V1_PREFIX=/api/v1
OPENAPI_URL=/openapi.json
DOCS_URL=/docs
REDOC_URL=/redoc

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Email Configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@example.com

# Sentry Error Tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Cloud Storage (optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1
