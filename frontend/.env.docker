# =============================================================================
# Docker Development Environment Configuration
# =============================================================================
# This file is used when running the frontend in Docker development containers.
# It is automatically loaded by docker-compose.yml
#
# DO NOT commit sensitive values to this file.
# This file can be committed as it contains only development defaults.
# =============================================================================

# Environment
VITE_NODE_ENV=development

# API Configuration
# With the reverse proxy, frontend and backend are on the same origin
# Browser accesses backend at http://localhost/api/ (through proxy)
# This is just a fallback - runtime config from backend takes precedence
VITE_API_URL=http://localhost
VITE_API_TIMEOUT=30000
VITE_API_ENABLE_LOGGING=true

# Application Settings
VITE_APP_NAME=Frontend Application (Docker)
VITE_APP_VERSION=1.0.0-dev
VITE_APP_TITLE=Frontend App - Docker Development
VITE_DEBUG=true

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_SERVICE_WORKER=false

# Security Settings
VITE_SECURITY_ENABLE_CSP=false
VITE_SECURITY_MAX_LOGIN_ATTEMPTS=10
