# =============================================================================
# Frontend Application - Test Environment Configuration
# =============================================================================
# This file contains environment variables for the test environment.
# It is automatically loaded by Vite when running tests (MODE=test).
#
# These values are used to provide a consistent test environment and
# prevent configuration validation errors during test execution.
# =============================================================================

# -----------------------------------------------------------------------------
# Environment Settings
# -----------------------------------------------------------------------------

# Set test environment
VITE_NODE_ENV=test

# -----------------------------------------------------------------------------
# API Configuration (REQUIRED)
# -----------------------------------------------------------------------------

# API_URL - Use the proxy URL (through nginx) for test environment
# This can be overridden in individual tests as needed
VITE_API_URL=http://localhost/api

# API_TIMEOUT - Shorter timeout for tests
VITE_API_TIMEOUT=5000

# API_ENABLE_LOGGING - Disabled in tests to reduce noise
VITE_API_ENABLE_LOGGING=false

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

VITE_APP_NAME=Frontend Application (Test)
VITE_APP_VERSION=1.0.0-test
VITE_APP_TITLE=Frontend Application - Test Mode
VITE_DEBUG=false

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Disable all external services in tests
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_SERVICE_WORKER=false

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------

VITE_SECURITY_ENABLE_CSP=false
VITE_SECURITY_MAX_LOGIN_ATTEMPTS=5
