{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Feature Log Schema",
  "description": "Schema for tracking feature planning and implementation",
  "type": "object",
  "properties": {
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "featureID": {
            "type": "string",
            "description": "Unique feature identifier (iteration number)"
          },
          "title": {
            "type": "string",
            "description": "Feature title"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when feature was created"
          },
          "userStoriesCreated": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when user stories were created"
          },
          "userStoriesImplemented": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "ISO 8601 timestamp when all user stories were implemented (null if not complete)"
          },
          "isSummarised": {
            "type": "boolean",
            "description": "Whether this feature has been summarised to reduce context"
          },
          "summarisedAt": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "ISO 8601 timestamp when feature was summarised (null if not summarised)"
          },
          "actions": {
            "type": "array",
            "description": "List of actions taken on this feature",
            "items": {
              "type": "object",
              "properties": {
                "actionType": {
                  "type": "string",
                  "enum": ["design", "implementation", "review"],
                  "description": "Type of action taken"
                },
                "completedAt": {
                  "type": "string",
                  "format": "date-time",
                  "description": "ISO 8601 timestamp when action was completed"
                },
                "designBriefUpdated": {
                  "type": "boolean",
                  "description": "For design actions: whether design brief was updated"
                }
              },
              "required": ["actionType", "completedAt"]
            }
          }
        },
        "required": ["featureID", "title", "createdAt", "userStoriesCreated", "isSummarised"]
      }
    }
  },
  "required": ["features"]
}
