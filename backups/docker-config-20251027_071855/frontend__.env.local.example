# =============================================================================
# Local Development Environment Configuration
# =============================================================================
# This file provides a starting point for local development configuration.
#
# Setup Instructions:
#   1. Copy this file to .env.local
#   2. Update values as needed for your local environment
#   3. Never commit .env.local to version control
#
# The .env.local file is automatically loaded by Vite and overrides .env values
# =============================================================================

# Environment
VITE_NODE_ENV=development

# API Configuration (backend running locally)
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=30000
VITE_API_ENABLE_LOGGING=true

# Application Settings
VITE_APP_NAME=Frontend Application (Local)
VITE_APP_VERSION=1.0.0-dev
VITE_APP_TITLE=Frontend App - Development
VITE_DEBUG=true

# Feature Flags (disabled for local development)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_SERVICE_WORKER=false

# Security Settings (relaxed for local development)
VITE_SECURITY_ENABLE_CSP=false
VITE_SECURITY_MAX_LOGIN_ATTEMPTS=10
